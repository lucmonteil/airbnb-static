<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<div class="banner-small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('background.jpg');">
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="header-flat-owner">
        <%= image_tag flat.owner_picture, class: "avatar-extra-large" %>
        <p><%= flat.owner_name %></p>
      </div>
      <div class="header-flat-name">
        <h1><%= flat.description %></h1>
        <p><%= flat.city %></p>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
    <div class="col-xs-6">
    <form class="form-inline">
      <div class="form-group">
        <input type="text" class="form-control" id="exampleInputName2" placeholder="check-in">
      </div>
      <div class="form-group">
        <input type="email" class="form-control" id="exampleInputEmail2" placeholder="check-incheck-out">
      </div>
       </div>
    </form>

    </div>
  </div>
</div>



